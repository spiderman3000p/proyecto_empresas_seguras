<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.opencv.javacv.facerecognition.Activities.RadioNuevo">

    <!-- header -->

    <!-- footer -->

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar4"
            title="@string/title_activity_radios_nuevo"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppBarStyle" />

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="true"
            android:fillViewport="true"
            android:isScrollContainer="false"
            android:orientation="vertical"
            android:overScrollMode="always"
            android:padding="8dp"
            android:scrollbars="vertical">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_edit_text"
                android:clickable="true"
                android:drawableRight="@android:drawable/ic_lock_idle_lock"
                android:drawableEnd="@android:drawable/ic_lock_idle_lock"
                android:drawableTint="@android:color/black"
                android:focusable="true"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLength="15"
                android:maxLines="1"
                android:padding="8dp"
                />

            <EditText
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_edit_text"
                android:clickable="true"
                android:drawableRight="@android:drawable/ic_lock_idle_lock"
                android:drawableEnd="@android:drawable/ic_lock_idle_lock"
                android:drawableTint="@android:color/black"
                android:focusable="true"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:maxLength="15"
                android:maxLines="1"
                android:padding="8dp"
                />
            <EditText
                android:id="@+id/new_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_edit_text"
                android:clickable="true"
                android:drawableRight="@android:drawable/ic_lock_idle_lock"
                android:drawableEnd="@android:drawable/ic_lock_idle_lock"
                android:drawableTint="@android:color/black"
                android:focusable="true"
                android:hint="@string/new_password_confirm"
                android:inputType="textPassword"
                android:maxLength="15"
                android:maxLines="1"
                android:padding="8dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:baselineAligned="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button"
                    android:drawableEnd="@android:drawable/ic_menu_close_clear_cancel"
                    android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
                    android:text="@string/btn_cancel"
                    android:theme="@style/buttonBlue" />

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button"
                    android:drawableEnd="@android:drawable/ic_menu_save"
                    android:drawableRight="@android:drawable/ic_menu_save"
                    android:text="@string/btn_guardar"
                    android:theme="@style/buttonBlue" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>