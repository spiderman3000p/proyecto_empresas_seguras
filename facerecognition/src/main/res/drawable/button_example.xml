<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#e1e1e1" />
            <stroke
                android:width="2dp"
                android:color="#c7c5c5" />
            <gradient
                android:startColor="#F7D358"
                android:centerColor="#DF7401"
                android:endColor="#F7D358"
                android:angle="90"/>
            <corners android:radius="6dp" />
            <padding android:bottom="10dp" android:left="10dp"
                android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="90" android:endColor="#fff" android:startColor="#fff" />
            <stroke android:width="2dp" android:color="#e1e0e0" />
            <corners android:radius="7dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</selector>